{
  "expo": {
    "name": "herfer-app",
    "slug": "herfer-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "La aplicación necesita acceso a tus fotos para permitirte seleccionar imágenes.",
          "cameraPermission": "La aplicación necesita acceso a tu cámara para permitirte tomar fotos."
        }
      ]
    ],
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "package": "com.axeljhosmell123.herferapp",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "La aplicación necesita acceso a tu cámara para permitirte tomar fotos.",
        "NSPhotoLibraryUsageDescription": "La aplicación necesita acceso a tus fotos para permitirte seleccionar imágenes."
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "7102f1ea-b1f2-467a-9694-d273fcaf97e6"
      }
    }
  }
}
